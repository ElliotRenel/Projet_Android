<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <com.github.chrisbanes.photoview.PhotoView
        android:id="@+id/main_view"
        android:layout_width="323dp"
        android:layout_height="313dp"
        android:layout_marginTop="90dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/galleryButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Gallery"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.749"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/cameraButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:text="Camera"
        app:layout_constraintEnd_toStartOf="@+id/galleryButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollMain"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <Button
                android:id="@+id/buttonReset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reset" />

            <Button
                android:id="@+id/buttonToGray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="To Gray"
                android:visibility="visible" />

            <Button
                android:id="@+id/buttonColorize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Colorize"
                android:visibility="visible" />

            <Button
                android:id="@+id/buttonKeepColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Keep Color"
                android:visibility="visible" />

            <Button
                android:id="@+id/buttonLight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Apply Lightlevel : 0"
                android:visibility="visible" />

            <SeekBar
                android:id="@+id/seekBarLight"
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:max="100"
                android:min="-100"
                android:progress="0"
                tools:layout_editor_absoluteX="124dp"
                tools:layout_editor_absoluteY="453dp" />

            <Button
                android:id="@+id/buttonContrastLinear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Linear Contrast" />

            <Button
                android:id="@+id/buttonContrastEqual"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Equalizer Contrast"
                android:visibility="visible" />

            <Button
                android:id="@+id/buttonGaussian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gaussian Blur" />

            <Button
                android:id="@+id/buttonEdge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edge Detection" />

        </LinearLayout>
    </ScrollView>

    <ScrollView
        android:id="@+id/scrollColors"
        android:layout_width="409dp"
        android:layout_height="200dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:layout_marginStart="0dp"
                android:visibility="visible" />

            <Button
                android:id="@+id/buttonOk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="0dp"
                android:text="@android:string/ok"
                android:visibility="visible" />

        </LinearLayout>
    </ScrollView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>